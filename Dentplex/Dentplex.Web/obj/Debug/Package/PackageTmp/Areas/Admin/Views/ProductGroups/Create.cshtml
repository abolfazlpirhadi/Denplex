@model Dentplex.Data.Model.ProductGroup

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}



@using (Ajax.BeginForm("Create", "ProductGroups", FormMethod.Post, new AjaxOptions(){ UpdateTargetId = "ShowList", OnSuccess = "Success"}, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.ProductParentGroupID)

        <div class="form-group">
            @Html.LabelFor(model => model.ProductGroupTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductGroupTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductGroupTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductGroupImage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="imgProductGroup" />
                @Html.ValidationMessageFor(model => model.ProductGroupImage)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductGroupBanner, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="imgBannerProductGroup" />
                @Html.ValidationMessageFor(model => model.ProductGroupBanner)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-info">@*<span class="glyphicon glyphicon-ad"></span>*@ایجاد</button>
                @*<input type="submit" value="ایجاد" class="btn btn-info" />*@
            </div>
        </div>
    </div>
}


