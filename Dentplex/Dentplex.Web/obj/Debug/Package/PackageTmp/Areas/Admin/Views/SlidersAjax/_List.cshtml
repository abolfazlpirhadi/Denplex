@model IEnumerable<Dentplex.Data.Model.Slider>



<table class="table table-bordered table-striped">
    <tr>
        <th>عنوان اسلایدر</th>
        <th>تنظیمات</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SlideTitle</td>
            <td>
                <a onclick="ShowSlideItem(@item.SlideID)" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-list"></i> آیتم ها</a>
                <a onclick="ShowEditSliderForm(@item.SlideID)" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-edit"></i> ویرایش</a>
                <a onclick="DeleteSlide(@item.SlideID)" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i> حذف</a>
            </td>
        </tr>
    }
</table>







