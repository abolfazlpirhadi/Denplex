@model Dentplex.Data.Model.Slider
@{
    ViewBag.Title = "Edit";
}
<div class="panel panel-info" style="margin-top:20px">
    <div class="panel-heading"><h4>ویرایش اسلایدر</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Sliders", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SlideID)
                @Html.HiddenFor(model => model.SlideImage)
                <div class="form-group">
                    @Html.LabelFor(model => model.SlideTitle, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.SlideTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SlideTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SlideIsActive, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.SlideIsActive)
                        @Html.ValidationMessageFor(model => model.SlideIsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SlideImage, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-3">
                        <input type="file" name="imgSlider" />
                        @Html.ValidationMessageFor(model => model.SlideImage, "", new { @class = "text-danger" })
                        <br />
                        @if (Model.SlideImage != null)
                        {
                            <img src="/Images/SliderImages/@Model.SlideImage" class="thumbnail" style="max-width: 150px" />
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SlideDesc, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SlideDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SlideDesc, "", new { @class = "text-danger" })
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input type="submit" value="ویرایش" class="btn btn-info" />
                        @Html.ActionLink("بازگشت به لیست", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
        
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
