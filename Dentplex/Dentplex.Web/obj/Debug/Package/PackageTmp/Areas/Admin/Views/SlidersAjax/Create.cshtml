@model Dentplex.Data.Model.Slider

@{
    ViewBag.Title = "افزودن ";
}

<h2>افزودن </h2>


@using (Ajax.BeginForm("Create", "SlidersAjax", FormMethod.Post, new AjaxOptions() { UpdateTargetId = "ShowList", OnSuccess = "Success"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SlideTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SlideTitle, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.SlideTitle)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </div>
    </div>

}

