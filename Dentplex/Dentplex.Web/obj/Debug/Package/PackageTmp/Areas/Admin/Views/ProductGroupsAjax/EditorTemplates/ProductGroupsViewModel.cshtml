@model Dentplex.Web.ViewModels.ProductGroupsViewModel

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.ProductGroupTitle, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">@Html.TextBoxFor(model => model.ProductGroupTitle, new { @class = "k-textbox" })</div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProductGroupImage, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">@Html.Kendo().Upload().Name("imgProductGroup")</div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProductGroupBanner, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">@Html.Kendo().Upload().Name("imgProductBanner")</div>

                </div>
            </div>
        </div>
    </div>
}
