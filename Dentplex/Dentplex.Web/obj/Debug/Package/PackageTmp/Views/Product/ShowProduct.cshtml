@model Dentplex.Data.Model.Product

@{
    ViewBag.Title = "جزئیات محصول" + "-" + Model.ProductTitle;
}

<div class="container">
    <div class="grid-product-det product">
        <div class="pic-wrapp col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <img src="~/Images/ProductImages/MainImage/@Model.ProductImage" class="img img-responsive" alt="">
        </div>
        <div class="text-wrapp col-lg-6 col-md-6 col-sm-12 col-xs-12">

            <h1 class="product_title entry-title">@Model.ProductTitle</h1>
            <p>@Model.ProductShortText</p>
            <table>
                <tbody>
                    <tr>
                        <td>
                           @Html.Raw(Model.ProductText)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.Action("RelatedProducts", "Product")








