@model Dentplex.Data.Model.Page
@{
    ViewBag.Title = "تماس با ما";
}

<div class="container">
    <ul class="grid-product" style="padding:50px 15px">
        @Model.PageTitle
        <br />
        @Html.Raw(Model.PageText)




        <div class="info-widget onmap">
            <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCNO0qg-a0yN6lU3UjeeucDvuFk6t9wBJY&callback=initMap&amp;language=fa-IR"
                    type="text/javascript"></script>
            <div id="map" style="width:100%; height: 400px; direction: ltr;"></div>
            <script type="text/javascript">
                function initMap() {
                    debugger;
                    var coordinate = "35.7666455,51.4585965";
                    var i = coordinate.indexOf(",");
                    if (i > 0) {
                        var llf = coordinate.substr(0, i);
                        var lls = coordinate.substr(i + 1);
                    } else {
                        return "";
                    }
                    var sn = $("#locationDetails").attr("data-sn");
                    var directionDisplay;
                    var directionsService = new google.maps.DirectionsService();
                    var map;
                    var iconimage = "http://" + window.location.host + "/Content/theme/img/map_pointer.png";
                    var iconshadow = "http://labs.google.com/ridefinder/images/mm_20_shadow.png";
                    var myOptions = {
                        zoom: 15,
                        center: new google.maps.LatLng(llf, lls),
                        mapTypeId: google.maps.MapTypeId.ROADMAP,
                        streetViewControl: true
                    };
                    var map = new google.maps.Map(document.getElementById("map"), myOptions);
                    // global infowindow object
                    var globalInfowindow = new google.maps.InfoWindow();
                    function cleardirs() {
                        if (directionsDisplay)
                            directionsDisplay.setMap(null);

                        div = document.getElementById('directions_div');
                        if (div)
                            div.innerHTML = "";
                    }
                    //setPointer
                    var point0 = new google.maps.LatLng(llf, lls);
                    var marker0 = new google.maps.Marker({
                        position: point0,
                        map: map,
                        title: sn,
                        shadow: iconshadow,
                        icon: iconimage
                    });
                }

            </script>
