@model IEnumerable<Dentplex.Data.Model.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","Products")" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-plus"></i> افزودن</a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.SlideIsActive)
        </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.SlideDesc)
            </th>*@
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                <img src="/Images/SliderImages/@item.ProductImage" class="thumbnail" style="max-width: 100px" />
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.SlideIsActive)
            </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.SlideDesc)
                </td>*@
            <td>
                <a href="@Url.Action("Edit","Products",new { id = @item.ProductID})" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-edit"></i>ویرایش</a>
                <a href="@Url.Action("Delete","Products",new { id = @item.ProductID})" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i>حذف</a>
            </td>
        </tr>
    }
</table>
