@model IEnumerable<Dentplex.Data.Model.ProductGallery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImageTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductImageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductImageTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductGalleryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductGalleryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductGalleryID })
        </td>
    </tr>
}

</table>
