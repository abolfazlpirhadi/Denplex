@model Dentplex.Data.Model.ProductGroup

@{
    ViewBag.Title = "ویرایش " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

@using (Ajax.BeginForm("Edit", "ProductGroups", FormMethod.Post, new AjaxOptions(){ UpdateTargetId = "ShowList", OnSuccess = "Success" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ProductGroupID)
        @Html.HiddenFor(model => model.ProductParentGroupID)

        <div class="form-group">
            @Html.LabelFor(model => model.ProductGroupTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductGroupTitle)
                @Html.ValidationMessageFor(model => model.ProductGroupTitle)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-info" type="submit">@*<span class="glyphicon glyphicon-save"></span>*@ثبت</button>
                @*<input type="submit" value="ثبت" class="btn btn-primary" />*@
            </div>
        </div>
    </div>
}





