                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("AjaxDelete", "Users")',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            userId: uid
                        }),
                        success: function (response) {
