@model Dentplex.Data.Model.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info" style="margin-top:20px">
    <div class="panel-heading"><h4>ویرایش کاربر</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserID)

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @type = "password", placeholder = "********" } })
                        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                        @*<input id="mytxtPass" name="mytxtPass" class = "form-control", maxlength = "100" type = "password" placeholder = "********"  />*@
                        <a onclick='ShowPass();return false;'><i class="glyphicon glyphicon-eye-open"></i> نمایش پسورد</a>
                    </div>
                </div>
                <script type="text/javascript">
                    
                    function ShowPass() {
                        debugger;
                        var that = document.getElementById("UserPassword");
                        if (that.type === "password") {
                            that.type = "text";
                        } else {
                            that.type = "password";
                        }
                    }
                </script>
                <div class="form-group">
                    @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ویرایش" class="btn btn-default" />
                        @Html.ActionLink("بازگشت به لیست", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

