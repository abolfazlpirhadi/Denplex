@model IEnumerable<Dentplex.Data.Model.Slider>

@{
    ViewBag.Title = "Index";
}

<h4>فهرست اسلایدر</h4>
<hr />

<p>
    <a href="@Url.Action("Create","Sliders")" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-plus"></i> افزودن</a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SlideTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlideImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlideIsActive)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.SlideDesc)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SlideTitle)
            </td>
            <td>
                <img src="/Images/SliderImages/@item.SlideImage" class="thumbnail" style="max-width: 100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlideIsActive)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.SlideDesc)
            </td>*@
            <td>
                <a href="@Url.Action("Edit","Sliders",new { id = @item.SlideID})" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-edit"></i>ویرایش</a>
                <a href="@Url.Action("","",new { id = @item.SlideID})" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i>حذف</a>
            </td>
        </tr>
    }

</table>
