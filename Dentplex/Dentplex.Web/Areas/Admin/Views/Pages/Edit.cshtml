@model Dentplex.Data.Model.Page

@{
    ViewBag.Title = "ویرایش تک صفحه";
}

<div class="panel panel-info" style="margin-top:20px">
    <div class="panel-heading"><h4>ویرایش تک صفحه</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m=>m.PageID)
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.PageName, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.PageName, new { htmlAttributes = new { @class = "form-control",@disabled="disabled" } })
                        @Html.ValidationMessageFor(model => model.PageName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PageTitle, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.PageTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PageTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PageIsActive, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.PageIsActive)
                        @Html.ValidationMessageFor(model => model.PageIsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PageText, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PageText, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PageText, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input type="submit" value="ذخیره" class="btn btn-primary" />
                        @Html.ActionLink("بازگشت به لیست", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/adapters/jquery.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#PageText').ckeditor();
        })
    </script>
}

