@model IEnumerable<Dentplex.Data.Model.Page>
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-info" style="margin-top:20px">
    <div class="panel-heading"><h4>فهرست صفحات تک صفحه ای</h4></div>
    <div class="panel-body">
        <div class="k-rtl">
            @(Html.Kendo().Grid(Model).Name("Grid")
                .Columns(columns =>
                {
                    columns.Bound(model => model.PageName);
                    columns.Bound(model => model.PageTitle);
                    columns.Bound(model => model.PageIsActive);
                    columns.Bound(item => @item.PageID).Title("دستورات").Filterable(false).Groupable(false)
                    .Template(@<text>
                        <a href="@Url.Action("Edit","Pages",new { id = @item.PageID})" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-edit"></i>ویرایش</a>
                        <a href="@Url.Action("Delete","Pages",new { id = @item.PageID})" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i>حذف</a>
                        </text>).Width(150);
                })
                .ToolBar(toolbar =>
                {
                    toolbar.Custom().Action("Create", "Pages").Text("افزودن");
                })
                .Groupable()
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .DataSource(dataSource => dataSource
                .Server()
                .Model(model => model.Id(item => item.PageID)))
            )

        </div>
    </div>
</div>









