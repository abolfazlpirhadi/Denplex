@model IEnumerable<Dentplex.Data.Model.Product>

@if (Model.Any())
{
    <div class="container">
        <div class="row big-title text-center">
            <h2>انواع محصولات ما</h2>
        </div>
        <div class="wrapp-our-pr">
            <div class="swiper-container3">
                <div class="swiper-wrapper">
                    @foreach (var item in Model)
                    {
                        <a href="/ShowProduct/@item.ProductID" class="swiper-slide">
                            <img src="~/Images/ProductImages/MainImage/@item.ProductImage" alt="" class="img-responsive">
                            <span>@item.ProductTitle</span>
                        </a>
                    }
                </div>
                <div class="swiper-pagination hide"></div>
            </div>
        </div>
        
        
        <div class="clearfix"></div>
    </div>
}

