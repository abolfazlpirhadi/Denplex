                },
                pagination: {
                    el: '.swiper-pagination',
                },
				  
                breakpoints: {
                    1024: {
                        slidesPerView: 5,
                        spaceBetween: 50
                    },
                    768: {
                        slidesPerView: 3,
                        spaceBetween: 10
                    },
                    640: {
                        slidesPerView: 2,
                        spaceBetween: 10
